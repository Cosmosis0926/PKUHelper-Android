<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lostfound_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="7dp"
        >
        
    <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#aaaaaa"
            android:text="@string/lostfound_hint_add"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            />
    
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/corners_bg" >
        
        <TableRow android:padding="10dip">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="15sp"
                android:paddingLeft="10dp" 
                android:paddingRight="10dp"
                android:text="@string/lostfound_hint_name"
                />
            <TextView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"/>
            <EditText
                   android:id="@+id/lostfound_add_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="14sp"
                   android:width="130dp"
                   android:singleLine="true"
                   android:inputType="text"
                   android:hint="@string/must"
                   />
        </TableRow>
        <View
            android:layout_height="1dip"  android:layout_width="fill_parent"
            android:background="#e8e8e7" /> 
        <TableRow android:padding="10dip">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="15sp"
                android:paddingLeft="10dp" 
                android:paddingRight="10dp"
                android:text="@string/lostfound_hint_lost_or_found"
                />
            <TextView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"/>

            <Switch
                android:id="@+id/lostfound_add_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="@string/lost"
                android:textOn="@string/found" />
        </TableRow>
        <View
            android:layout_height="1dip"  android:layout_width="fill_parent"
            android:background="#e8e8e7" /> 
        <TableRow android:padding="10dip">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="15sp"
                android:paddingLeft="10dp" 
                android:paddingRight="10dp"
                android:text="@string/lostfound_hint_type"
                />
            <TextView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"/>
            <Spinner
                android:id="@+id/lostfound_add_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        </TableLayout>
        
    <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginTop="20dp"
            android:textColor="#aaaaaa"
            android:text="@string/lostfound_hint_detail"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            />

    <EditText
        android:id="@+id/lostfound_add_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/corners_bg"
        android:gravity="top|start"
        android:hint="@string/lostfound_hint_detail_add"
        android:inputType="textMultiLine"
        android:lines="5"
        android:padding="10dp" />
    
    <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginTop="20dp"
            android:textColor="#aaaaaa"
            android:text="@string/lostfound_hint_time"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/corners_bg" >
        
        <TableRow android:padding="10dip" android:id="@+id/lostfound_tablerow_date">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="15sp"
                android:paddingLeft="10dp" 
                android:paddingRight="10dp"
                android:text="@string/date"
                />
            <TextView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"/>
            <TextView
                   android:id="@+id/lostfound_add_date"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="15sp"
                   android:layout_gravity="end"
                   />
        </TableRow>
        <View
            android:layout_height="1dip"  android:layout_width="fill_parent"
            android:background="#e8e8e7" /> 
        <TableRow android:padding="10dip" android:id="@+id/lostfound_tablerow_time">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="15sp"
                android:paddingLeft="10dp" 
                android:paddingRight="10dp"
                android:text="@string/time"
                />
            <TextView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"/>

            <TextView
                android:id="@+id/lostfound_add_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textSize="15sp" />

        </TableRow>
   </TableLayout>
    
    <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginTop="20dp"
            android:textColor="#aaaaaa"
            android:text="@string/lostfound_hint_image_add"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            />
    
     <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/lostfound_add_image"
                    android:layout_width="88sp"
                    android:layout_height="88sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/app_name"
                    />

                <LinearLayout 
        			android:gravity="center"
        			style="?android:attr/buttonBarStyle"
       				 android:layout_width="fill_parent" 
       				 android:layout_height="wrap_content"
       				 android:layout_below="@+id/lostfound_add_image"
       				 >
        			<Button 
           			 android:id="@+id/lostfound_add_image_select" 
          			  android:text="@string/lostfound_hint_image_select"
          			  style="?android:attr/buttonBarButtonStyle"
         			   android:layout_width="wrap_content"
         			    android:layout_height="wrap_content"
        			    android:textSize="12sp"
      			  	/>

       			 	<Button
       			 	    android:id="@+id/lostfound_add_image_delete"
       			 	    style="?android:attr/buttonBarButtonStyle"
       			 	    android:layout_width="wrap_content"
       			 	    android:layout_height="wrap_content"
       			 	    android:text="@string/lostfound_hint_image_delete"
       			 	    android:textSize="12sp" />

  			  	</LinearLayout>
            </RelativeLayout>
    
     
    <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginTop="20dp"
            android:textColor="#aaaaaa"
            android:text="@string/lostfound_hint_contact"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            />
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" android:layout_marginBottom="20dp"
        android:background="@drawable/corners_bg" >
        
        <TableRow android:padding="10dip">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="15sp"
                android:paddingLeft="10dp" 
                android:paddingRight="10dp"
                android:text="@string/lostfound_hint_number"
                />
            <TextView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"/>
            <EditText
                   android:id="@+id/lostfound_add_phone"
                   android:layout_height="wrap_content"
                   android:textSize="15sp"
                   android:inputType="phone"
                   android:singleLine="true"
                   android:layout_width="140dp"
                   android:hint="@string/must"
                   />
        </TableRow>
    </TableLayout>
     
</LinearLayout>
    
</ScrollView><!-- From: file:/E:/android/PKUHelper/app/src/main/res/layout/lostfound_add.xml -->