<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:background="#ffffff"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/pkuhole_comment_image"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="15dp"
        android:contentDescription="@string/app_name" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/pkuhole_comment_image"
        android:layout_toEndOf="@+id/pkuhole_comment_image"
        
        >
    
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    
        <TextView android:id="@+id/pkuhole_comment_id" android:textColor="#FF000000"
            android:textSize="15sp" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            /> 
		<TextView android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"/>
       <TextView android:id="@+id/pkuhole_comment_time" android:textColor="#FF800080"
            android:textSize="15sp" android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:paddingLeft="15dp"
             android:paddingRight="15dp"
            />       

    
    
    </LinearLayout>
    
    <TextView
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="#8b8b83"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/pkuhole_comment_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        />
        
    
    
    </LinearLayout>
</RelativeLayout>