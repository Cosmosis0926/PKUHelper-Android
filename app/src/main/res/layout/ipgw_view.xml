<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ipgw_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".PKUHelper" >

        <TextView
			android:id="@+id/ipgw_hint" android:textColor="#ffefefef"
			android:textSize="14sp" android:singleLine="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/ipgw_hint"
			android:layout_marginTop="25dp"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:layout_marginLeft="30dp"
			android:layout_marginStart="30dp"
        />
        <TextView
			android:id="@+id/ipgw_state" android:textColor="#ffefefef"
			android:textSize="14sp" android:singleLine="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="30dp"
			android:layout_marginStart="30dp"
			android:layout_below="@+id/ipgw_hint"
        />
        <android.gesture.GestureOverlayView
        	android:id="@+id/ipgw_gesture"
        	android:layout_width="fill_parent"
        	android:layout_marginLeft="50dp"
        	android:layout_marginRight="50dp"
        	android:layout_marginTop="70dp"
        	android:layout_marginBottom="70dp"
        	android:layout_height="fill_parent" >
    	</android.gesture.GestureOverlayView>
        
</RelativeLayout>